{
  "name": "liuyao-divination",
  "version": "1.0.0",
  "description": "A desktop application for Liu Yao (Six Lines) divination prediction",
  "main": "dist-electron/src/main/index.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "npm run build:electron && electron .",
    "dev:full": "concurrently --kill-others \"npm run dev\" \"cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "vue-tsc --noEmit && vite build && npm run build:electron",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:win": "npm run build && electron-builder --win",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.ts,.tsx --fix",
    "typecheck": "vue-tsc --noEmit && tsc -p tsconfig.electron.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "better-sqlite3": "^9.4.3",
    "element-plus": "^2.6.1",
    "marked": "^17.0.3",
    "pinia": "^2.1.7",
    "uuid": "^9.0.1",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.24",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/test-utils": "^2.4.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.22.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1",
    "vue-tsc": "^2.0.6",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "com.liuyao.app",
    "productName": "LiuYao-Divination",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${arch}.${ext}"
    }
  }
}
